<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".Registro">

    <FrameLayout
        android:layout_width="347dp"
        android:layout_height="644dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirmar Contraseña"
            android:textColor="@color/black"
            android:textColorHighlight="@color/black"
            android:textColorHint="@color/black"
            android:textColorLink="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:translationX="20sp"
            android:translationY="480sp" />

        <EditText
            android:id="@+id/ePasswordConfirm"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:translationX="20sp"
            android:translationY="500sp"
            android:translationZ="1.5sp"
            tools:ignore="SpeakableTextPresentCheck" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@android:color/holo_green_dark"
            android:translationY="80sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REGISTRATE"
            android:textColor="@color/black"
            android:textColorHighlight="@color/black"
            android:textColorHint="@color/black"
            android:textColorLink="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:translationX="100sp"
            android:translationY="20sp" />

        <EditText
            android:id="@+id/ePersonName"
            android:layout_width="297dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:translationX="20sp"
            android:translationY="140sp"
            android:translationZ="1.5sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de Usuario"
            android:textColor="@color/black"
            android:textColorHighlight="@color/black"
            android:textColorHint="@color/black"
            android:textColorLink="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:translationX="20sp"
            android:translationY="120sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correo Electrónico"
            android:textColor="@color/black"
            android:textColorHighlight="@color/black"
            android:textColorHint="@color/black"
            android:textColorLink="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:translationX="20sp"
            android:translationY="210sp" />

        <EditText
            android:id="@+id/eEmailAddress"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ejemplo@gmail.com"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textColorHint="@android:color/darker_gray"
            android:translationX="20sp"
            android:translationY="230sp"
            android:translationZ="1.5dp" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Número del Sistema "
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:translationX="20dp"
            android:translationY="300dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contraseña"
            android:textColor="@color/black"
            android:textColorHighlight="@color/black"
            android:textColorHint="@color/black"
            android:textColorLink="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:translationX="20sp"
            android:translationY="390sp" />

        <EditText
            android:id="@+id/ePassword"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:translationX="20sp"
            android:translationY="410sp"
            android:translationZ="1.5sp"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/buttonCrear"
            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_green_light"
            android:text="Crear Cuenta"
            android:textSize="16sp"
            android:textStyle="bold"
            android:translationX="55sp"
            android:translationY="570sp" />

        <EditText
            android:id="@+id/eNumero"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:textColor="@color/black"
            android:translationX="20dp"
            android:translationY="320dp"
            android:translationZ="1.5dp" />

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>