<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".IniSesion" >

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="324dp"
        android:layout_height="514dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="APP RIEGO"
            android:textColor="#CCB916"
            android:textSize="48sp"
            android:textStyle="bold"
            android:translationX="40sp"
            android:translationY="10sp"
            android:translationZ="2sp" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@android:color/holo_green_dark"
            android:translationY="80sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INICIAR SESIÓN"
            android:textColor="@color/black"
            android:textColorHighlight="@color/black"
            android:textColorHint="@color/black"
            android:textColorLink="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:translationX="75sp"
            android:translationY="100sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usuario:"
            android:textColor="@color/black"
            android:textColorHighlight="@color/black"
            android:textColorHint="@color/black"
            android:textColorLink="@color/black"
            android:textSize="16sp"
            android:translationX="25sp"
            android:translationY="175sp" />

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:translationX="25sp"
            android:translationY="200sp"
            android:translationZ="1.5sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contraseña:"
            android:textColor="@color/black"
            android:textColorHighlight="@color/black"
            android:textColorHint="@color/black"
            android:textColorLink="@color/black"
            android:textSize="16sp"
            android:translationX="25sp"
            android:translationY="275sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_green_light"
            android:onClick="Inicio"
            android:text="Iniciar Sesión"
            android:translationX="20sp"
            android:translationY="370sp"
            android:translationZ="1.5sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="Regis"
            android:text="Crear Cuenta"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="16sp"
            android:translationX="110sp"
            android:translationY="445sp" />

        <EditText
            android:id="@+id/editTextTextPassword3"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:translationX="25sp"
            android:translationY="300sp"
            android:translationZ="1.5sp"
            tools:ignore="TouchTargetSizeCheck" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>